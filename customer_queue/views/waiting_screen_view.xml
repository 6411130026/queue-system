<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="waiting_screen_template" name="Waiting Screen">
        <t t-call="web.layout">
            <t t-set="title">Waiting Screen</t>

            <!-- CSS -->
            <t t-jquery="head" t-operation="append">
                <style>
                    .waiting-screen-container {
                        text-align: center;
                        background: linear-gradient(135deg, #74ebd5, #acb6e5);
                        min-height: 100vh;
                        padding: 20px;
                        font-family: Arial, sans-serif;
                    }
                    .screen-title {
                        font-size: 3rem;
                        color: #fff;
                        margin-bottom: 20px;
                        text-shadow: 2px 2px 4px rgba(0,0,0,0.2);
                    }
                    .queue-table {
                        width: 80%;
                        margin: 0 auto;
                        border-collapse: collapse;
                        background: white;
                        box-shadow: 0px 4px 10px rgba(0,0,0,0.1);
                        border-radius: 10px;
                        overflow: hidden;
                    }
                    .queue-table th, .queue-table td {
                        padding: 15px;
                        font-size: 1.5rem;
                        text-align: center;
                        border-bottom: 2px solid #f1f1f1;
                    }
                    .queue-table th {
                        background: #2ecc71;
                        color: white;
                    }
                    .queue-table .queue-number {
                        font-size: 2rem;
                        font-weight: bold;
                        color: #e74c3c;
                    }
                    .queue-table .patient-name {
                        font-weight: bold;
                        color: #3498db;
                    }
                    .queue-table .counter {
                        font-weight: bold;
                        color: #2ecc71;
                    }
                </style>
            </t>

            <!-- JavaScript for Auto Refresh -->
            <t t-jquery="head" t-operation="append">
                <script>
                    setInterval(function() {
                        location.reload();
                    }, 1000); // ‡∏£‡∏µ‡πÄ‡∏ü‡∏£‡∏ä‡∏ó‡∏∏‡∏Å 5 ‡∏ß‡∏¥‡∏ô‡∏≤‡∏ó‡∏µ
                </script>
            </t>

            <div class="waiting-screen-container">
                <h1 class="screen-title">üöë Hospital Queue System</h1>
                <table class="queue-table">
                    <thead>
                        <tr>
                            <th>Queue Number</th>
                            <th>Patient Name</th>
                            <th>Department</th>
                        </tr>
                    </thead>
                    <tbody id="queue-list">
                        <t t-foreach="queue_list" t-as="queue">
                            <tr>
                                <td class="queue-number"><t t-esc="queue.name"/></td>
                                <td class="patient-name"><t t-esc="queue.customer_name"/></td>
                                <td class="department"><t t-esc="queue.department.name"/></td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </t>
    </template>
</odoo>
